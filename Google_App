    industry: 'Consulting',
    org_size: '1-49 employees',
    country: 'Canada',
    total_score: 70,
    max_total: 105,
    overall_percent: 67,
    overall_category: 'Workload', // matches current front-end behaviour
    score_workload: 10,
    score_control: 12,
    score_reward: 8,
    score_community: 11,
    score_fairness: 9,
    score_values: 7,
    score_restoration: 13,
    page_url: 'https://www.jennifer-moss.com/burnout-self-assessment',
    user_agent: 'Test UA'
  };

  const fakeEvent = {
    postData: {
      contents: JSON.stringify(fakePayload),
      type: 'application/json'
    }
  };

  doPost(fakeEvent);
}
